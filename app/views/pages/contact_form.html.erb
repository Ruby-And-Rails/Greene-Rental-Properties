<%= render '/elements/banner'  %>

<div class="container-area">
  <div class="wrapper">
    <div class="conatiner">
      <div class="inner">
        <div class="content_column1">
          <h1>Contact Us</h1>
          <div class="contact_left">
            <ul class="contact-form_address">
              <li><%= @page.title %></li>
              <li><%= @page.description.html_safe %></li>

            </ul>
            <div class="map">
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d119743.53374944824!2d85.75041271337584!3d20.300870219682118!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a1909d2d5170aa5%3A0xfc580e2b68b33fa8!2sBhubaneswar%2C+Odisha!5e0!3m2!1sen!2sin!4v1460021407530" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
          </div>
          <div class="contact_right">


            <% if @inquiry.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@inquiry.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @inquiry.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>" onclick="slideUp(this);"><%= message %></div>
            <% end %>



            <h3>Enquiry form</h3>
            <%= form_for :inquiry do |f| %>
              <div class="form_box">
                <lable>Name</lable><br/>
                <%= f.text_field :name, :required=>false %>
              </div>

              <div class="form_box">
                <lable>Email</lable><br/>
                <%= f.email_field :email, :required=>false %>
              </div>

              <div class="form_box">
                <lable>Phone</lable><br/>
                <%= f.phone_field :phone, :required=>false %>
              </div>

              <div class="form_box">
                <lable>Message</lable><br/>
                <%= f.text_area :message, :required=>false %>
              </div>
              <input type="submit" value="Submit"/>
            <% end %>
          </div>

        </div>

      </div>
    </div>
  </div>
</div>

<%= render '/elements/featured_properties'  %>